<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.comp2000_restaurant.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.comp2000_restaurant.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_staffDashboardFragment"
            app:destination="@id/staffDashboardFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.comp2000_restaurant.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <!-- Guest Flow -->
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.comp2000_restaurant.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu">
        <argument android:name="username" app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/reservationsFragment"
        android:name="com.example.comp2000_restaurant.ReservationsFragment"
        android:label="fragment_reservations"
        tools:layout="@layout/fragment_reservations">
        <action android:id="@+id/action_reservationsFragment_to_newReservationFragment" app:destination="@id/newReservationFragment" />
    </fragment>
    <fragment
        android:id="@+id/newReservationFragment"
        android:name="com.example.comp2000_restaurant.NewReservationFragment"
        android:label="fragment_new_reservation"
        tools:layout="@layout/fragment_new_reservation" />
    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="com.example.comp2000_restaurant.AccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings">
        <argument android:name="username" app:argType="string" />
        <action
            android:id="@+id/action_accountSettingsFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Staff Flow -->
    <fragment
        android:id="@+id/staffDashboardFragment"
        android:name="com.example.comp2000_restaurant.StaffDashboardFragment"
        android:label="fragment_staff_dashboard"
        tools:layout="@layout/fragment_staff_dashboard">
        <action android:id="@+id/action_staffDashboardFragment_to_staffMenuFragment" app:destination="@id/staffMenuFragment" />
        <action android:id="@+id/action_staffDashboardFragment_to_staffReservationsFragment" app:destination="@id/staffReservationsFragment" />
        <action android:id="@+id/action_staffDashboardFragment_to_staffAccountSettingsFragment" app:destination="@id/staffAccountSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/staffMenuFragment"
        android:name="com.example.comp2000_restaurant.StaffMenuFragment"
        android:label="fragment_staff_menu"
        tools:layout="@layout/fragment_staff_menu">
        <action android:id="@+id/action_staffMenuFragment_to_editMenuItemFragment" app:destination="@id/editMenuItemFragment" />
        <action android:id="@+id/action_staffMenuFragment_to_staffManageItemFragment" app:destination="@id/staffManageItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/editMenuItemFragment"
        android:name="com.example.comp2000_restaurant.EditMenuItemFragment"
        android:label="fragment_edit_menu_item"
        tools:layout="@layout/fragment_edit_menu_item">
        <argument android:name="menuItemId" app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/staffManageItemFragment"
        android:name="com.example.comp2000_restaurant.StaffManageItemFragment"
        android:label="fragment_staff_manage_item"
        tools:layout="@layout/fragment_staff_manage_item" />
    <fragment
        android:id="@+id/staffReservationsFragment"
        android:name="com.example.comp2000_restaurant.StaffReservationsFragment"
        android:label="fragment_staff_reservations"
        tools:layout="@layout/fragment_staff_reservations" />
    <fragment
        android:id="@+id/staffAccountSettingsFragment"
        android:name="com.example.comp2000_restaurant.StaffAccountSettingsFragment"
        android:label="fragment_account_settings"
        tools:layout="@layout/fragment_account_settings">
        <action
            android:id="@+id/action_staffAccountSettingsFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/main_nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
